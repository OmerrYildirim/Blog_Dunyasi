@{
    ViewData["Title"] = "Blog Detayı";
}
@model DogusProject.Models.Services.ViewModels.BlogViewModel

<div class="card shadow-lg mb-4">
    <div class="card-body p-4">
        <div class="d-flex justify-content-between align-items-center mb-4">
            <h2 class="mb-0">@Model.Title</h2>
            <a asp-action="Index" class="btn btn-outline-secondary">
                <i class="bi bi-arrow-left me-2"></i>Menüye geri dön
            </a>
        </div>

        @if (!string.IsNullOrEmpty(Model.ImageUrl))
        {
            <img src="@Model.ImageUrl" class="img-fluid rounded mb-4" alt="Blog Image"/>
        }

        <div class="d-flex justify-content-between align-items-center mb-3">
            <span class="text-muted">
                <i class="bi bi-person-circle me-2"></i>@Model.AuthorName
            </span>
            <div>
                <span class="badge bg-secondary me-2">@Model.CategoryName</span>
                <span class="text-muted">
                    <i class="bi bi-calendar3 me-1"></i>@Model.CreatedAt.ToString("F")
                </span>
            </div>
        </div>

        <p class="lead">@Model.Content</p>
    </div>
</div>

<!-- Yorumlar Listesi -->
<partial name="PartialViews/_commentList" model="@Model.Comments"/>

<!-- Yorum Yapma Formu -->
@if (User.Identity!.IsAuthenticated)
{
    <div class="card shadow-lg mt-4">
        <div class="card-body p-4">
            <h5 class="mb-3">Yorum Yap</h5>
            <form asp-controller="Comment" asp-action="AddComment" method="post">
                <input type="hidden" name="BlogId" value="@Model.Id"/>
                <div class="mb-3">
                    <textarea name="Content" class="form-control" rows="3"
                              placeholder="Yorumunuzu buraya yazın..."></textarea>
                </div>
                <button type="submit" class="btn btn-primary">
                    <i class="bi bi-send me-2"></i>Yorumu Gönder
                </button>
            </form>
        </div>
    </div>
}
else
{
    <div class="alert alert-info mt-4">
        <i class="bi bi-info-circle me-2"></i>
        Yorum yapabilmek için lütfen <a asp-controller="User" asp-action="Login">giriş yapın</a>.
    </div>
}