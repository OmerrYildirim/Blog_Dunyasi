@{
    ViewData["Title"] = "Details";
}
@model DogusProject.Models.Services.ViewModels.BlogViewModel

<div class="d-flex min-vh-100 bg-dark">
    <!-- Sol Navbar -->
    <div class="bg-light border-end" style="width: 250px;">
        <div class="p-3">
            <h5 class="text-center mb-4">Blog App</h5>
            <div class="d-flex flex-column gap-2">
                @if (User.Identity!.IsAuthenticated)
                {
                    <a asp-controller="User" asp-action="Profile" class="btn btn-outline-primary">
                        <i class="bi bi-person-circle me-2"></i>Profil
                    </a>
                    <form asp-controller="User" asp-action="SignOut" method="get">
                        <button type="submit" class="btn btn-outline-danger w-100">
                            <i class="bi bi-box-arrow-right me-2"></i>Çıkış Yap
                        </button>
                    </form>
                }
                else
                {
                    <a asp-controller="User" asp-action="CreateUser" class="btn btn-outline-primary">
                        <i class="bi bi-person-plus me-2"></i>Kayıt Ol
                    </a>
                    <a asp-controller="User" asp-action="Login" class="btn btn-primary">
                        <i class="bi bi-box-arrow-in-right me-2"></i>Giriş Yap
                    </a>
                }
            </div>
        </div>
    </div>

    <!-- Ana İçerik -->
    <div class="flex-grow-1 p-4">
        <div class="container">
            <div class="card shadow-lg">
                <div class="card-body p-4">
                    <div class="d-flex justify-content-between align-items-center mb-4">
                        <h2 class="mb-0">Blog Details</h2>
                        <div class="d-flex gap-2">
                            @if (User.Identity.IsAuthenticated)
                            {
                                <a asp-controller="Blog" asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-outline-primary">
                                    <i class="bi bi-pencil me-2"></i>Edit
                                </a>
                                <form asp-controller="Blog" asp-action="Delete" asp-route-id="@Model.Id" method="post"
                                      onsubmit="return confirm('Are you sure you want to delete this post?')">
                                    <button type="submit" class="btn btn-outline-danger">
                                        <i class="bi bi-trash me-2"></i>Delete
                                    </button>
                                </form>
                            }
                            <a asp-action="Index" class="btn btn-outline-secondary">
                                <i class="bi bi-arrow-left me-2"></i>Back to List
                            </a>
                        </div>
                    </div>

                    <article class="blog-post">
                        @if (!string.IsNullOrEmpty(Model.ImageUrl))
                        {
                            <img src="@Model.ImageUrl" class="img-fluid rounded w-100 mb-4" alt="@Model.Title"
                                 style="max-height: 400px; object-fit: cover;"/>
                        }
                        else
                        {
                            <img src="https://www.freeiconspng.com/uploads/no-image-icon-15.png"
                                 class="img-fluid rounded w-100 mb-4" alt="No Image"
                                 style="max-height: 400px; object-fit: contain; padding: 20px; background-color: #f8f9fa;"/>
                        }

                        <div class="blog-post-meta text-muted mb-4">
                            <span><i class="bi bi-person-circle"></i> @Model.AuthorName</span>
                            <span class="mx-2">•</span>
                            <span><i class="bi bi-tag"></i> @Model.CategoryName</span>
                            <span class="mx-2">•</span>
                            <span><i class="bi bi-calendar3"></i> @Model.CreatedAt.ToString("F")</span>
                        </div>

                        <h1 class="display-4 mb-4">@Model.Title</h1>

                        <div class="blog-post-content lead">
                            @Html.Raw(Model.Content)
                        </div>
                    </article>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    .blog-post-meta span {
        display: inline-flex;
        align-items: center;
        gap: 0.5rem;
    }

    .blog-post-content {
        font-size: 1.1rem;
        line-height: 1.8;
        color: #2c3e50;
    }
</style>