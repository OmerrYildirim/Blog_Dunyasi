@{
    ViewData["Title"] = "Erişim Reddedildi";
}

<div class="container-fluid m-0 p-0 min-vh-100 bg-dark">
    <div class="row justify-content-center align-items-center min-vh-100 m-0">
        <div class="col-11 col-sm-8 col-md-6 col-lg-4">
            <div class="card shadow-lg text-center">
                <div class="card-body p-4">
                    <div class="mb-4">
                        <i class="bi bi-shield-lock text-danger" style="font-size: 4rem;"></i>
                    </div>
                    <h2 class="card-title mb-3">Erişim Reddedildi</h2>
                    <p class="card-text mb-4">Bu sayfaya erişim yetkiniz bulunmamaktadır.</p>
                    
                    <div class="progress mb-3" style="height: 25px;">
                        <div id="progressBar" class="progress-bar progress-bar-striped progress-bar-animated" 
                             role="progressbar" style="width: 0%">
                        </div>
                    </div>
                    
                    <p id="redirectMessage" class="text-muted">
                        <span id="countdown">5</span> saniye içinde giriş sayfasına yönlendiriliyorsunuz...
                    </p>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script src="~/js/AccessDenied.js"></script>
}