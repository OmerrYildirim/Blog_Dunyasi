<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Blog Dünyası</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css">
</head>
<body>
<div class="d-flex min-vh-100">
    <!-- Sol Navbar -->
    <div class="bg-dark text-white" style="width: 250px;">
        <div class="p-4">
            <h4 class="text-center mb-4">Blog Dünyası</h4>
            <div class="d-flex flex-column gap-3">
                <a asp-controller="Blog" asp-action="Index" class="btn btn-outline-light">
                    <i class="bi bi-house-door me-2"></i>Ana Sayfa
                </a>
                @if (User.Identity!.IsAuthenticated)
                {
                    <a asp-controller="User" asp-action="Profile" class="btn btn-outline-light">
                        <i class="bi bi-person-circle me-2"></i>Profil
                    </a>
                    <form asp-controller="User" asp-action="SignOut" method="get">
                        <button type="submit" class="btn btn-outline-danger w-100">
                            <i class="bi bi-box-arrow-right me-2"></i>Çıkış Yap
                        </button>
                    </form>
                }
                else
                {
                    <a asp-controller="User" asp-action="CreateUser" class="btn btn-outline-light">
                        <i class="bi bi-person-plus me-2"></i>Kayıt Ol
                    </a>
                    <a asp-controller="User" asp-action="Login" class="btn btn-outline-light">
                        <i class="bi bi-box-arrow-in-right me-2"></i>Giriş Yap
                    </a>
                }
            </div>
        </div>
    </div>

    <!-- Ana İçerik -->
    <div class="flex-grow-1 bg-light">
        <div class="container py-4">
            @RenderBody()
        </div>
    </div>
</div>

<script src="~/lib/jquery/dist/jquery.min.js"></script>
<script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
<script src="~/js/site.js"></script>
@await RenderSectionAsync("Scripts", required: false)
</body>
</html>