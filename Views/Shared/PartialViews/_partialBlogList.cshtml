@model DogusProject.Models.Services.ViewModels.BlogPageViewModel

<div class="row mb-4">
    <div class="col-12">
        <div class="card shadow-sm">
            <div class="card-body">
                <h5 class="card-title mb-3">
                    <i class="bi bi-filter me-2"></i>Görmek istediğiniz blogları filtreleyin
                </h5>
                <div class="d-flex gap-2 flex-wrap">
                    @if (Model.CategoryList != null && Model.CategoryList.Count > 0)
                    {
                        <form asp-action="Index" method="get" class="mb-4">
                            <select class="form-select w-auto" asp-for="CategoryId" asp-items="Model.CategoryList" onchange="this.form.submit();">
                                <option value="">Tüm Kategoriler</option>
                            </select>
                        </form>
                    }
                </div>
            </div>
        </div>
    </div>
</div>

<div class="row g-4">
    @foreach (var blog in Model.BlogList)
    {
        <div class="col-md-6 col-lg-4">
            <div class="card h-100 shadow-sm">
                @if (!string.IsNullOrEmpty(blog.ImageUrl))
                {
                    <img src="@blog.ImageUrl" class="card-img-top" alt="Blog Image" style="height: 200px; object-fit: cover;"/>
                }
                else
                {
                    <img src="https://www.freeiconspng.com/uploads/no-image-icon-15.png" class="card-img-top"
                         alt="No Image" style="height: 200px; object-fit: contain; padding: 20px; background-color: #f8f9fa;"/>
                }
                <div class="card-body">
                    <h5 class="card-title">@blog.Title</h5>
                    <p class="card-text text-muted small">
                        @(blog.Content.Length > 100 ? blog.Content[..100] + "..." : blog.Content)
                    </p>
                    <div class="d-flex justify-content-between align-items-center">
                        <div class="small text-muted">
                            <i class="bi bi-person-circle me-1"></i>@blog.AuthorName
                        </div>
                        <span class="badge bg-secondary">@blog.CategoryName</span>
                    </div>
                </div>
                <div class="card-footer bg-transparent">
                    <div class="d-flex justify-content-between align-items-center">
                        <small class="text-muted">
                            <i class="bi bi-calendar3 me-1"></i>@blog.CreatedAt.ToString("dd.MM.yyyy")
                        </small>
                        <a asp-controller="Blog" asp-action="Details" asp-route-id="@blog.Id"
                           class="btn btn-sm btn-outline-primary">
                            Devamını Oku
                        </a>
                    </div>
                </div>
            </div>
        </div>
    }
</div>