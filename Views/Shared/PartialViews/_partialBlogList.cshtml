@model DogusProject.Models.Services.ViewModels.BlogPageViewModel

<div class="d-flex min-vh-100 bg-dark">
    
    <div class="border-end" style="width: 250px;">
        <div class="p-3">
            <h5 class="text-center mb-4">Blog App</h5>
            <div class="d-flex flex-column gap-2">
                @if (User.Identity!.IsAuthenticated)
                {
                    <a asp-controller="User" asp-action="Profile" class="btn btn-outline-primary">
                        <i class="bi bi-person-circle me-2"></i>Profil
                    </a>
                    <form asp-controller="User" asp-action="SignOut" method="get">
                        <button type="submit" class="btn btn-outline-danger w-100">
                            <i class="bi bi-box-arrow-right me-2"></i>Çıkış Yap
                        </button>
                    </form>
                }
                else
                {
                    <a asp-controller="User" asp-action="CreateUser" class="btn btn-outline-primary">
                        <i class="bi bi-person-plus me-2"></i>Kayıt Ol
                    </a>
                    <a asp-controller="User" asp-action="Login" class="btn btn-primary">
                        <i class="bi bi-box-arrow-in-right me-2"></i>Giriş Yap
                    </a>
                }
            </div>
        </div>
    </div>
    
    <div class="flex-grow-1 p-4">
        <div class="mb-4 d-flex justify-content-between align-items-center">
            <h2 class="text-white mb-0">Latest Blog Posts</h2>
            <a asp-controller="Blog" asp-action="Create" class="btn btn-primary">
                <i class="bi bi-plus-lg me-2"></i>Create New Blog
            </a>
        </div>

        @if (Model.CategoryList != null && Model.CategoryList.Count > 0)
        {
            <form asp-action="Index" method="get" class="mb-4">
                <select class="form-select w-auto" asp-for="CategoryId" asp-items="Model.CategoryList" onchange="this.form.submit();">
                    <option value="">Tüm Kategoriler</option>
                </select>
            </form>
        }

        <div class="row g-4">
            @if (Model.BlogList != null && Model.BlogList.Any())
            {
                foreach (var blog in Model.BlogList)
                {
                    <div class="col-md-6 col-lg-4">
                        <div class="card h-100 shadow">
                            @if (!string.IsNullOrEmpty(blog.ImageUrl))
                            {
                                <img src="@blog.ImageUrl" class="card-img-top" alt="Blog Image" style="height: 200px; object-fit: cover;"/>
                            }
                            else
                            {
                                <img src="https://www.freeiconspng.com/uploads/no-image-icon-15.png" 
                                     class="card-img-top" 
                                     alt="No Image Available" 
                                     style="height: 200px; object-fit: contain; padding: 20px; background-color: #f8f9fa;"/>
                            }
                            <div class="card-body">
                                <h5 class="card-title">@blog.Title</h5>
                                <p class="card-text">@(blog.Content.Length > 150 ? blog.Content[..150] + "..." : blog.Content)</p>
                                <div class="text-muted small mb-2">
                                    <i class="bi bi-person"></i> @blog.AuthorName
                                    <span class="mx-2">|</span>
                                    <i class="bi bi-tag"></i> @blog.CategoryName
                                    <span class="mx-2">|</span>
                                    <i class="bi bi-calendar"></i> @blog.CreatedAt.ToString("d")
                                </div>
                                <div class="d-flex justify-content-between align-items-center">
                                    <a asp-controller="Blog" asp-action="Details" asp-route-id="@blog.Id" class="btn btn-outline-primary">Read More</a>
                                    @if (User.Identity.IsAuthenticated)
                                    {
                                        <div>
                                            <a asp-controller="Blog" asp-action="Edit" asp-route-id="@blog.Id" class="btn btn-sm btn-primary">Edit</a>
                                            <form asp-controller="Blog" asp-action="Delete" asp-route-id="@blog.Id" method="post"
                                                  style="display: inline;"
                                                  onsubmit="return confirm('Are you sure you want to delete this post?')">
                                                <button type="submit" class="btn btn-sm btn-danger">Delete</button>
                                            </form>                                        </div>
                                    }
                                </div>
                            </div>
                        </div>
                    </div>
                }
            }
            else
            {
                <div class="col-12">
                    <div class="alert alert-info text-center">
                        No blogs available.
                    </div>
                </div>
            }
        </div>
    </div>
</div>

@if (TempData["Reason"]?.ToString() == "UnauthorizedAction")
{
    <div class="modal fade" id="unauthorizedModal" tabindex="-1">
        <div class="modal-dialog modal-dialog-centered">
            <div class="modal-content border-danger">
                <div class="modal-header bg-danger text-white">
                    <h5 class="modal-title">Yetkisiz İşlem</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                </div>
                <div class="modal-body">
                    Bu işlemi gerçekleştirmek için yetkiniz yok.
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Tamam</button>
                </div>
            </div>
        </div>
    </div>

    <script>
        const modal = new bootstrap.Modal(document.getElementById('unauthorizedModal'));
        modal.show();
    </script>
}