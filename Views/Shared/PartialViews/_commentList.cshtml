@model List<DogusProject.Models.Services.ViewModels.CommentViewModel>

<div class="card shadow-lg">
    <div class="card-header bg-white py-3">
        <h5 class="mb-0">Yorumlar</h5>
    </div>
    <div class="card-body">
        @if (Model != null && Model.Any())
        {
            foreach (var comment in Model)
            {
                <div class="d-flex mb-4">
                    <div class="flex-shrink-0">
                        <div class="bg-light rounded-circle p-2">
                            <i class="bi bi-person-circle fs-4"></i>
                        </div>
                    </div>
                    <div class="flex-grow-1 ms-3">
                        <div class="d-flex justify-content-between align-items-center">
                            <h6 class="mb-0">@comment.UserName</h6>
                            <small class="text-muted">
                                <i class="bi bi-clock me-1"></i>@comment.CreatedAt.ToString("dd.MM.yyyy HH:mm")
                            </small>
                        </div>
                        <p class="mt-2 mb-0">@comment.Content</p>
                    </div>
                </div>
            }
        }
        else
        {
            <div class="text-center py-4">
                <i class="bi bi-chat-left-dots fs-1 text-muted"></i>
                <p class="mt-3 mb-0">Henüz yorum yapılmamış.</p>
            </div>
        }
    </div>
</div>