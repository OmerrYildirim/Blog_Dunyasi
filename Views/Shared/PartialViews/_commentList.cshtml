@* _commentList.cshtml *@
@model List<DogusProject.Models.Services.ViewModels.CommentViewModel>

@if (Model != null && Model.Any())
{
    foreach (var comment in Model)
    {
        <div class="card mb-3 shadow-sm">
            <div class="card-body">
                <div class="d-flex justify-content-between align-items-center mb-2">
                    <h6 class="mb-0"><i class="bi bi-person-circle"></i> @comment.UserName</h6>
                    <small class="text-muted"><i class="bi bi-clock"></i> @comment.CreatedAt.ToString("f")</small>
                </div>
                <p class="card-text mb-0">@comment.Content</p>
            </div>
        </div>
    }
}
else
{
    <div class="alert alert-info">
        <i class="bi bi-chat-dots"></i> Hiç yorum yok. İlk yorumu yapın!
    </div>
}